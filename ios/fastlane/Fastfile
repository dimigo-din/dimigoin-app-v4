opt_out_usage
default_platform(:ios)

platform :ios do
  desc "Build & upload a beta build to TestFlight"
  lane :beta do
    setup_ci if ENV['CI']

    app_store_connect_api_key(
      key_id: ENV["APPSTORECONNECT_API_KEY_ID"],
      issuer_id: ENV["APPSTORECONNECT_API_ISSUER_ID"],
      key_content: ENV["APPSTORECONNECT_API_KEY"]
    )

    match(
      type: "appstore",
      readonly: true
    )

    build_app(
      workspace: "Runner.xcworkspace",
      scheme: "Runner",
      xcargs: "CODE_SIGN_STYLE=Automatic",
      clean: true
    )

    upload_to_testflight
  end

  desc "Build & upload a production build to App Store"
  lane :prod do
    setup_ci if ENV['CI']

    app_store_connect_api_key(
      key_id: ENV["APPSTORECONNECT_API_KEY_ID"],
      issuer_id: ENV["APPSTORECONNECT_API_ISSUER_ID"],
      key_content: ENV["APPSTORECONNECT_API_KEY"]
    )

    match(
      type: "appstore",
      readonly: true
    )

    build_app(
      workspace: "Runner.xcworkspace",
      scheme: "Runner",
      xcargs: "CODE_SIGN_STYLE=Automatic",
      clean: true
    )

    upload_to_app_store(
      force: true,
      automatic_release: false,
      submit_for_review: true,
      submission_information: {
        add_id_info_uses_idfa: false
      },
      precheck_include_in_app_purchases: false
    )
  end
end
