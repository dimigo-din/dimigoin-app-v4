default_platform(:ios)

platform :ios do
  desc "Deploy to TestFlight"
  lane :beta do
    setup_ci if ENV['CI']

    app_store_connect_api_key(
      key_id: ENV["APPSTORECONNECT_API_KEY_ID"],
      issuer_id: ENV["APPSTORECONNECT_API_ISSUER_ID"],
      key_content: ENV["APPSTORECONNECT_API_KEY"]
    )

    match(
      type: "appstore",
      readonly: ENV["CI"]
    )

    build_app(
      workspace: "Runner.xcworkspace",
      scheme: "Runner",
      export_method: "app-store",
      xcargs: "CODE_SIGN_STYLE=Manual DEVELOPMENT_TEAM=8U8W5R5884 CODE_SIGN_IDENTITY='Apple Distribution' PROVISIONING_PROFILE_SPECIFIER='match AppStore com.din.dimigoin'",
      export_options: {
        provisioningProfiles: {
          "com.din.dimigoin" => "match AppStore com.din.dimigoin"
        }
      }
    )

    upload_to_testflight(
      skip_waiting_for_build_processing: true
    )
  end

  desc "Deploy to App Store"
  lane :prod do
    setup_ci if ENV['CI']

    app_store_connect_api_key(
      key_id: ENV["APPSTORECONNECT_API_KEY_ID"],
      issuer_id: ENV["APPSTORECONNECT_API_ISSUER_ID"],
      key_content: ENV["APPSTORECONNECT_API_KEY"]
    )

    match(
      type: "appstore",
      readonly: ENV["CI"]
    )

    build_app(
      workspace: "Runner.xcworkspace",
      scheme: "Runner",
      export_method: "app-store",
      xcargs: "CODE_SIGN_STYLE=Manual DEVELOPMENT_TEAM=8U8W5R5884 CODE_SIGN_IDENTITY='Apple Distribution' PROVISIONING_PROFILE_SPECIFIER='match AppStore com.din.dimigoin'",
      export_options: {
        provisioningProfiles: {
          "com.din.dimigoin" => "match AppStore com.din.dimigoin"
        }
      }
    )

    upload_to_app_store(
      force: true,
      automatic_release: false,
      submit_for_review: true,
      submission_information: { add_id_info_uses_idfa: false },
      precheck_include_in_app_purchases: false,
      skip_screenshots: true,
      reject_if_possible: true
    )
  end
end
